                // "tiledef",
                // "-o",
                // "tiledef.td",
                // "../pramprem/assets/logo/pramprem.aseprite"
                // "bitmap",
                // "-c",
                // "-o",
                // "pramprem.bm",
                // "../pramprem/assets/logo/pramprem.aseprite"
                "tilemap",
                "-o",
                "tilemap{frame}.tm",
                "../pramprem/assets/logo/pramprem.aseprite"
                // "palette",
                // "-o",
                // "palettes.pal",
                // "../pramprem/assets/logo/pramprem.aseprite"
            ],
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        }
    ]
